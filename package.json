{
  "name": "alchemyst",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "db:gen": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:seed": "tsx src/db/seed/index.ts",
    "docker:db": "docker compose -f src/db/docker.compose.yml up -d",
    "docker:db:down": "docker compose -f src/db/docker.compose.yml down",
    "db:setup": "bun docker:db && bun db:migrate && bun db:seed",
    "db:reset": "bun docker:db:down && bun db:setup"
  },
  "dependencies": {
    "@clerk/nextjs": "^6.21.0",
    "@neondatabase/serverless": "^1.0.0",
    "dotenv": "^16.5.0",
    "drizzle-orm": "^0.44.2",
    "next": "15.3.3",
    "pg": "^8.16.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "svix": "^1.67.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/pg": "^8.15.4",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "drizzle-kit": "^0.31.1",
    "eslint": "^9",
    "eslint-config-next": "15.3.3",
    "tailwindcss": "^4",
    "tsx": "^4.19.4",
    "typescript": "^5"
  }
}
